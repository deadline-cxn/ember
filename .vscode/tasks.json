{
    "version": "2.0.0",
    "options": {
        "env": {
            "app_name": "ember",
            "win_dir": "E:/dev/repos",
            "linux_dir": "/files/dev/repos",
            "configure": "../configure --with-bash-malloc=no CFLAGS=\"-O3 -fno-builtin-malloc -fno-builtin-calloc -fno-builtin-realloc -fno-builtin-free\" LDFLAGS=-L/usr/local/lib LIBS=\"-ltcmalloc -lcurl\" CC=clang"
        }
    },
    "tasks": [
        {
            "label": "C/C++: g++ build (linux) EMBER SERVER",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-Wall",
                "-D_DLCS_CONSOLE",
                "-Wno-unknown-pragmas",
                "-fpermissive",
                "-I/usr/include/ncursesw",
                "-I/usr/include/tcl8.6",
                "-I${linux_dir}/dlstorm",
                "${linux_dir}/${app_name}/src/${app_name}_server.cpp",
                "${linux_dir}/dlstorm/c_event.cpp",
                "${linux_dir}/dlstorm/c_entity.cpp",
                "${linux_dir}/dlstorm/dlcs.cpp",
                "${linux_dir}/dlstorm/c_console.cpp",
                "${linux_dir}/dlstorm/c_log.cpp",
                "${linux_dir}/dlstorm/c_gaf.cpp",
                "${linux_dir}/dlstorm/md5.cpp",
                "${linux_dir}/dlstorm/c_net.cpp",
                "${linux_dir}/dlstorm/c_gui_chat_enum.cpp",
                "${linux_dir}/dlstorm/c_sqlitedb.cpp",
                "${linux_dir}/dlstorm/c_timer.cpp",
                "${linux_dir}/dlstorm/dlcs_linux.cpp",
                "${linux_dir}/dlstorm/dlcs_gnu.cpp",
                "${linux_dir}/${app_name}/src/manserver.server.cpp",
                "${linux_dir}/${app_name}/src/manserver.client.cpp",
                "${linux_dir}/${app_name}/src/mantra_player_character.cpp",
                "${linux_dir}/${app_name}/src/mantra_userdata.cpp",
                "${linux_dir}/${app_name}/src/mantra_character.cpp",
                "${linux_dir}/${app_name}/src/mantra_skill.cpp",
                "${linux_dir}/${app_name}/src/mantra_stat.cpp",
                "${linux_dir}/${app_name}/src/mantra_effect.cpp",
                "${linux_dir}/${app_name}/src/mantra_class.cpp",
                "-lz",
                "-lsqlite3",
                "-o",
                "${linux_dir}/${app_name}/server/${app_name}_server"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "C/C++: g++ build (linux) EMBER CLIENT SDL",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-Wall",
                "-Wno-unknown-pragmas",
                "-fpermissive",
                "-I/usr/include/ncursesw",
                "-I/usr/include",
                "-I/usr/include/tcl8.6",
                "-I/usr/include/SDL2",
                "-I/usr/include/GL",
                "-I/files/dev/repos/SDK/DevIL-SDK-x86-1.7.8/include",
                "-I/files/dev/repos/SDK/DevIL-SDK-x86-1.7.8/include/IL",
                "-I${linux_dir}/dlstorm",
                "-I${linux_dir}/dlstorm/gl",                
                "-I${linux_dir}/${app_name}",
                "${linux_dir}/${app_name}/src/${app_name}_client.cpp",
                "${linux_dir}/dlstorm/dlcs.cpp",
                "${linux_dir}/dlstorm/c_log.cpp",
                "${linux_dir}/dlstorm/c_console.cpp",
                "${linux_dir}/dlstorm/c_gaf.cpp",
                "${linux_dir}/dlstorm/c_sdl.cpp",
                "${linux_dir}/dlstorm/c_entity.cpp",
                "${linux_dir}/dlstorm/c_event.cpp",
                "${linux_dir}/dlstorm/dlcs_linux.cpp",
                "${linux_dir}/dlstorm/dlcs_gnu.cpp",
                "${linux_dir}/dlstorm/md5.cpp",
                "-lz",
                "-lsqlite3",
                "-lSDL2main",
                "-lSDL2",
                "-lSDL2_image",
                "-o",
                "${linux_dir}/${app_name}/client/${app_name}_client"
            ],
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        }
    ]

}